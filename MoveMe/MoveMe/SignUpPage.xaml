<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="MoveMe Registration Page"
             BackgroundColor="DarkSlateGray"
             x:Class="MoveMe.SignUpPage">
    <ContentPage.Content>
        <StackLayout>
            <Label TextColor="#77d065" Text="Welcome to MoveMe App!" Margin="0, 40 , 0, 10"
                   HorizontalOptions="CenterAndExpand" />
            <Image Source="truck.png" HeightRequest="140" WidthRequest="140" FlexLayout.AlignSelf="Center" BackgroundColor="Transparent" />
            <Label TextColor="#77d065" Text="You can register as a User or as a Company" Margin="0, 15 , 0, 0"
                   HorizontalOptions="CenterAndExpand" FontSize="15" />
            <Button x:Name="userRegistration" FontSize="Medium" BorderColor="Black" FlexLayout.AlignSelf="Stretch" CornerRadius="5"  Clicked="UserRegistration_Clicked"
                    HorizontalOptions="CenterAndExpand" Text="User" TextColor="White" BackgroundColor="#3399ff" Margin="0,10,0,40"/>
            <Button x:Name="companyRegistration" FontSize="Medium" BorderColor="Black" FlexLayout.AlignSelf="Stretch" CornerRadius="5"  Clicked="CompanyRegistration_Clicked"
                    HorizontalOptions="CenterAndExpand" Text="Company" TextColor="White" BackgroundColor="#3399ff"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>