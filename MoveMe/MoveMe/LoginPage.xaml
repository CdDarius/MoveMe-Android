<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Login Page"
             BackgroundColor="DarkSlateGray"
             x:Class="MoveMe.LoginPage">
    <StackLayout Margin="10, 10, 10, 0">
        <Label TextColor="#77d065" FontSize = "30" Text="Please Login" HorizontalTextAlignment="Center" Margin="0, 0, 0, 30"/>
        <Label TextColor="#77d065" Text="Email Address" Margin="5, 0, 0, 0" />
        <Entry x:Name="email" Placeholder="Please enter your email address" />
        <Label TextColor="#77d065" Text="Password" Margin="5, 0, 0, 0" />
        <Entry x:Name="password" Placeholder="Please enter your password"/>
        <Button Text="Login" TextColor="#77d065" Clicked="LoginButton_Clicked"/>
    </StackLayout>
</ContentPage>